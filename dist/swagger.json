          },
          {
            "name": "password",
            "in": "query",
            "description": "사용자 비밀번호",
            "type": "string"
          },
          {
            "name": "fcm_token",
            "in": "query",
            "description": "FCM TOKEN",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        }
      }
    },
    "/logout": {
      "get": {
